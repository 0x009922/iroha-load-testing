{
  "exclude": ["./run", "./incidents"],
  "tasks": {
    "cli": "deno run -A ./cli/mod.ts",
    "ui:dev": "deno run -A --node-modules-dir npm:vite",
    "ui:build": "deno run -A --node-modules-dir npm:vite build",
    "ui:preview": "deno run -A --node-modules-dir npm:vite preview",
    "ui:serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "fmt": { "semiColons": false, "singleQuote": true },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"]
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.42.0",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@iroha/client": "jsr:@iroha/client@^0.2.0",
    "@iroha/core": "jsr:@iroha/core@^0.2.1",
    "@std/fs": "jsr:@std/fs@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/toml": "jsr:@std/toml@^1.0.2",
    "@unocss/reset": "npm:@unocss/reset@^66.1.0-beta.1",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^5.2.1",
    "@vueuse/core": "npm:@vueuse/core@^12.7.0",
    "emittery": "npm:emittery@^1.1.0",
    "unocss": "npm:unocss@^66.1.0-beta.1",
    "vite": "npm:vite@^6.1.1",
    "vite-plugin-vue-devtools": "npm:vite-plugin-vue-devtools@^7.7.2",
    "vue": "npm:vue@^3.5.13",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/async": "jsr:@std/async@^1.0.10",
    "@std/cli": "jsr:@std/cli@^1.0.13",
    "@std/expect": "jsr:@std/expect@^1.0.13",
    "@std/fmt": "jsr:@std/fmt@^1.0.5",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "remeda": "npm:remeda@^2.20.2",
    "zod": "npm:zod@^3.24.2"
  },
  "unstable": ["fmt-component"]
}
